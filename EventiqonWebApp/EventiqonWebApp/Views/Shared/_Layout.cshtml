<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title> @ViewBag.Title - Eventiqon!</title>
    @Scripts.Render("~/bundles/evniq/js")
    @RenderSection("headerScripts", required: false)
    @Styles.Render("~/Content/evniq/css")
</head>
<body>
   

    <!--  Naslovna vrstica     -->
    <div class="container-fluid" id="topHeaderRow">
        <div class="row">
            <div style="padding:0.5em;" class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                Dobrodošli na spletni strani Eventiqon!
            </div>
        </div>
    </div>

    <!--  Iskalna vrstica     -->
    <div class="container-fluid" id="topSearchRow">
        <form method="post" action='@Url.Action("Search", "Home")'>
            <div style="margin-top:0.8em;" class="row">

                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="input-group">
                        <input type="text" name="iskalniNiz" class="form-control" placeholder="Kaj iščeš danes? (ime dogodka, tip, ključne besede...)">
                        <span class="input-group-btn">
                            <input class="btn btn-default" type="submit">Go!</input>
                        </span>
                    </div>
                </div>

            </div>
            <div class="row">
                <div style="padding-top:0.5em; padding-bottom:0.5em;" class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="input-group">
                        <label><input name="samoNovo" type="checkbox" value="true" checked> Samo novo</label>
                        <span style="display:inline-block; width:24px;"></span>
                        <label><input name="vMojiBlizini" type="checkbox" value="true"> V moji bližini</label>
                        <span style="display:inline-block; width:34px;"></span>
                        <select name="izbiraIskanja">
                            <option value="Aktivnosti">Aktivnosti</option>
                            <option value="Dogodki">Dogodki</option>
                            <option value="Uporabniki">Uporabniki</option>
                            <option value="Vse">Vse</option>
                        </select>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!--  Meni vrstica      -->
    <header class="navbar navbar-static-top navbar-eventiqon" id="top">
        <div class="container-fluid">

            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbarItems" aria-expanded="false">
                    <span class="sr-only">Razšiti meni</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-toggle navbar-brand">Eventiqon</a>
            </div>

            <nav aria-expanded="false" id="navbarItems" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home", null)" >Domov</a>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Moj profil
                            &nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("UserPanel", "UserProfile", null)#osebniPodatki">Osebni podatki</a></li>
                            <li><a href="@Url.Action("UserPanel", "UserProfile", null)#dodatneNastavitve">Dodatne nastavitve</a></li>
                            <li><a href="@Url.Action("UserInbox", "UserProfile", null)">Obvestila</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Moje udeležbe
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("MyAttendees", "Attendees", null)#Aktivnosti">Aktivnosti</a></li>
                            <li><a href="@Url.Action("MyAttendees", "Attendees", null)#Dogodki">Dogodki</a></li>
                            <li><a href="@Url.Action("Calendar", "Attendees", null)">Koledar</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Organizator
                            &nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("AddNewActivity", "Organizer", null)">Nova aktivnost</a></li>
                            <li><a href="@Url.Action("AddNewEvent", "Organizer", null)">Nov dogodek</a></li>
                            <li><a href="@Url.Action("Organizer", "Organizer", null)">Organizacijska površina</a></li>
                        </ul>
                    </li>

                </ul>
                <ul style="padding-right:2em;" class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Eventiqon
                            &nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("About", "Eventiqon", null)">O nas</a></li>
                            <li><a href="@Url.Action("Discussion", "Eventiqon", null)">Diskusija</a></li>
                            <li><a href="@Url.Action("Offers", "Eventiqon", null)">Plačniški model </a></li>
                            @if (Request.IsAuthenticated){ <li><a href="@Url.Action("LogOff", "Account", null)">Odjavi se! </a></li> }
                        </ul>
                    </li>
                </ul>
            </nav>

        </div>
    </header>

    <!-- Vsebina   -->
    <div class="container body-content">
        @RenderBody()
        <!-- Noga strani     -->
        <footer class="navbar navbar-static-bottom">
            <div class="container" style="text-align: center;">

                <div class="row" style="margin-top: 6em;"></div>
                <hr>
                <div class="row">
                    <ul style="padding: 0; margin: 0 auto;">
                        <li>Demo verzija - 0.0.1</li>
                        <li>·</li>
                        <li><a href="https://github.com/ActoreX/PrijavaNaDogodkeSP">GitHub</a></li>
                        <li>·</li>
                        <li><a href="../html/about/">O nas</a></li>
                        <li>·</li>
                        <li><a href="../html/discussions">Diskusija</a></li>
                    </ul>
                    <p>November, 2015 &copy; Vse pravice pridržane.</p>
                </div>
            </div>

        </footer>
    </div>
   
    @RenderSection("scripts", required: false)
</body>
</html>

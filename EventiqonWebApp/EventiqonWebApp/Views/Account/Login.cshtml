@using EventiqonWebApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Prijava";
}
<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
        <div class="panel panel-default vnosnaForma">
            <div class="panel-heading">Prijava</div>
            <form id="formaPrijave" method="post">
                <div class="panel-body">
                    <table class="table">
                        <colgroup>
                            <col style="width:40%;">
                            <col style="width:60%;">
                        </colgroup>
                        <tr>
                            <td><label for="upIme">Uporabniško ime</label></td>
                            <td><input id="upIme" name="upIme" type="text" placeholder="Vnesite uporabniško ime"></td>
                        </tr>
                        <tr>
                            <td><label for="geslo">Geslo</label></td>
                            <td><input id="geslo" name="geslo" type="password" placeholder="Vnesite geslo"></td>
                        </tr>
                        <tr>
                            <td colspan="2" style="padding-top:0; padding-bottom:0;"><hr></td>
                        </tr>
                        <tr>
                            <td colspan="2"><input id="prijaviSe" type="button" class="btn btn-info" value="Prijavi se!"></td>
                        </tr>
                        <tr>
                            <td colspan="2">Še nimaš računa? <a href="@Url.Action("Register","Account", null)">Registriraj se!</a></td>
                        </tr>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        <script>
            $(document).ready(function(){
                $('#formaPrijave').validate({
                    rules: {
                        upIme: {
                            required: true
                        },
                        geslo: {
                            required: true
                        }
                    },
                    messages: {
                        upIme: "Vnesite uporabniško ime - polje je obvezno",
                        geslo: "Vnesite geslo - polje je obvezno"
                    }
                });

                $('#prijaviSe').click(function(){
                    $('#formaPrijave').submit();
                });
            });
        </script>
    }
